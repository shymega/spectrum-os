foreground { s6-rc -bu change ext-rc }

foreground {
  redirfd -w 2 /dev/null
  cd /run/vm/${1}/config/providers/net
  elglob -0 providers *
  forx -pE provider { $providers }
  vm-start $provider
}

ch-remote --api-socket /run/service/vmm/instance/${1}/env/cloud-hypervisor.sock boot
